<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8f6f0">


    <TextView
        android:id="@+id/Account_Title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:text="账号：" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_toRightOf="@id/Account_Title"
        android:maxLines="1"
        android:textSize="15sp"
        android:ellipsize="marquee"
        android:text="addAcount" />

    <TextView
        android:id="@+id/Password_Title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Account_Title"
        android:textSize="15sp"
        android:text="密码：" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_toRightOf="@id/Password_Title"
        android:layout_below="@+id/tv_title"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/tv_title"
        android:text="30"/>

    <TextView
        android:id="@+id/Date_Title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Password_Title"
        android:textSize="15sp"
        android:text="添加时间：" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/tv_cost"
        android:layout_toRightOf="@id/Date_Title"
        android:text="costDate" />




</RelativeLayout>